<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme -->
    <style name="Theme.ThemeChange" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Global -->
        <item name="android:titleTextAppearance">@style/CustomHeadline1</item>
        <item name="android:itemTextAppearance">@style/CustomBody1</item>
    </style>

    <!-- Custom TextAppearance for Headline -->
    <style name="CustomHeadline1" parent="android:TextAppearance.Material.Headline">
        <item name="font">@font/poppins_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>

    <!-- Custom TextAppearance for Body -->
    <style name="CustomBody1" parent="android:TextAppearance.Material.Body1">
        <item name="font">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>
</resources>